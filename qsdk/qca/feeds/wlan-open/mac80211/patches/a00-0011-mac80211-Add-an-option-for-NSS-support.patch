+	int ret;
+
+	if (!sdata->nssctx)
+		goto out;
+
+	ret = nss_tx_virt_if_rxbuf(sdata->nssctx, skb);
+	if (ret) {
+		sdata_err(sdata, "NSS TX failed with error: %s\n",
+			  nss_tx_status_str(ret));
+		goto out;
+	}
+
+	return;
+out:
+	netif_receive_skb(skb);
